{
    "name": "energex/lumen-api",
    "description": "EnergeX AI Hiring Test - Lumen API",
    "type": "project",
    "require": {
        "php": "^8.0",
        "laravel/lumen-framework": "^9.0",
        "tymon/jwt-auth": "^2.0",
        "predis/predis": "^2.0",
        "illuminate/redis": "^9.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mockery/mockery": "^1.4"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}