              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"My First Post\",\n  \"content\": \"This is the content of my first post.\"\n}"
            },
            "url": {
              "raw": "http://localhost:8000/api/posts",
              "protocol": "http",
              "host": ["localhost"],
              "port": "8000",
              "path": ["api", "posts"]
            }
          }
        },
        {
